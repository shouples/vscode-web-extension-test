{
    "name": "Go Development",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "golang.go"
            ],
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash",
                "go.gopath": "/go"
            }
        }
    },
    "postCreateCommand": "code --install-extension ./dev-web-extension-web-0.0.1.vsix"
}