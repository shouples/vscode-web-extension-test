{
    "name": "Go Development",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "golang.go"
            ],
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash",
                "go.gopath": "/go"
            }
        }
    },
    "postCreateCommand": "curl -L https://github.com/shouples/vscode-web-extension-test/raw/main/dev-web-extension-web-0.0.1.vsix -o extension.vsix"
}